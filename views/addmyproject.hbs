    <div class="container my-5">
      <h1>ADD MY PROJECT</h1>
      <form method="post" action="/detail" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <div class="input-group">
            <input type="text" class="form-control" id="name" aria-describedby="basic-addon3 basic-addon4" name="title">
          </div>
        </div>

        <div class="mb-3">
          <label for="text-area" class="form-label">Description</label>
          <div class="input-group">
            <textarea class="form-control" aria-label="With textarea" id="text-area" name="content"></textarea>
          </div>
        </div>

        <div class="mb-3">
          <label for="formFile" class="form-label">Upload Image</label>
          <input class="form-control" type="file" id="formFile" name="image">
        </div>

        <div class="w-100 d-flex justify-content-end">
          <button type="submit" class="btn btn-secondary">Submit</button>

        </div>
      </form>
    </div>


