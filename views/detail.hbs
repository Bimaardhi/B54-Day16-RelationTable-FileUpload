<!doctype>
<lang="en">

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
      body {
        background-color: rgb(177, 174, 169);
      }

      h3 {
        margin-right: 20px;
      }

      .active {
        color: black;
      }

      .btn {
        background-color: black;
        color: white;
      }

      .container {
        width: 50%;
        margin: auto;
      }

      h1 {
        text-align: center;
      }

      .form-control {
        resize:
          none;
      }

      #start-date {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;

      }
    </style>
  </head>


  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <img src="/asset/image/dumbways.png" alt="dumbways" style="width: 40px; margin-right: 20px;">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll"
          aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarScroll">
          <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="detail" style="font-weight: bold;">My Project</a>
            </li>
          </ul>
          <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="./register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="./login">Login</a>
            </li>
          </ul>
          {{#if loginUser}}
          <h3>Selamat Datang, {{user.name}}</h3>
          <form action="/logout" method="POST">
            <button
              style="margin-top: 20px; margin-right: 20px; padding: 5px 10px; background-color:black; color:white; border-radius:5px;">Log
              out</button>
          </form>
          {{/if}}
          <button type="button" class="btn btn-secondary"><a href="./project/id"
              style="text-decoration: none; color: white;">Contact</a></button>
        </div>
      </div>
    </nav>

    <div class="container my-5">
      <h1>MY PROJECT</h1>
      {{#if loginUser }}
      <div style="display: flex; justify-content:center">
        <a href="./addmyproject" class="btn btn-primary" style="background-color: black;">Add My Project</a>
      </div>
      {{/if}}
      <hr>
      <div class="data">
        <div id="card" style="margin-top: 30px; margin-bottom:30px;">
          {{#each data}}

          <div class="card" style="width: 18rem; margin: auto;">
            <div>
              <img src="{{image}}" class="card-img-top" alt="">
            </div>
            <div class="card-body">
              <a href="./project/{{id}}" class="card-title">{{title}}</a>
              <br>

              <p class="card-text" >{{createdAt}} - {{username}} </p>

              <p class="card-text" >{{content}}</p>

              {{#if ../loginUser}}
              <div class="button-card">
                <a href="./edit/{{id}}" class="btn btn-primary"
                  style="background-color: black; margin-top:10px;">edit</a>
                <form method="post" action="/delete/{{id}}">
                  <button class="btn btn-primary" style="margin-top: 10px;">deleted</button>
                </form>
              </div>
              {{/if}}
            </div>
          </div>

          {{/each}}
        </div>
      </div>


    </div>




    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
    {{!--
    <script src="../asset/js/blog.js"></script> --}}
  </body>

  </html>